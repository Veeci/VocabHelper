<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_tertiary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="And you just give up like that?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/lato"
        android:textColor="@color/text_main"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_giveup"
        android:id="@+id/giveupimg"
        android:layout_marginTop="-50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="-30dp">

        <TextView
            android:id="@+id/okay_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/lato"
            android:text="Yeah...Im quit :'("
            android:textColor="@color/text_main"
            android:textSize="20sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/cancel_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/theme_secondary"
            android:gravity="center"
            android:text="Oh hell nahh!!"
            android:textColor="@color/text_main"
            android:textSize="20sp"
            android:fontFamily="@font/lato"
            android:padding="10dp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
